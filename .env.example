# ===========================================
# Pratejra Landing - Environment Configuration
# ===========================================

# Application Environment
NODE_ENV=production

# ===========================================
# Next.js Configuration
# ===========================================
NEXT_PUBLIC_SITE_URL=https://pratejra.build
NEXT_PUBLIC_API_URL=https://api.pratejra.build

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars-minimum
ALEX_PASSWORD=YourComplexPasswordHere123!@#
ALLOWED_DOMAINS=pratejra.build,alexandermoir.com
ALLOWED_EMAILS=alex@alexandermoir.com

# ===========================================
# Analytics & Monitoring
# ===========================================
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_GA_TRACKING_ID=GA_MEASUREMENT_ID
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# ===========================================
# Security Configuration
# ===========================================
NEXT_PUBLIC_CSP_ENABLED=true
CSP_REPORT_URI=https://pratejra.report-uri.com/r/d/csp/enforce

# ===========================================
# API Keys & Services
# ===========================================
# Database (if using external database)
DATABASE_URL=your-database-url

# Email Service (for contact forms)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email
SMTP_PASS=your-password
EMAIL_FROM=noreply@pratejra.build

# Content Management (if using CMS)
CMS_API_KEY=your-cms-api-key
CMS_ENDPOINT=https://api.your-cms.com

# ===========================================
# Deployment Configuration
# ===========================================
# Cloudflare Pages
CF_PAGES_BRANCH=main
CF_PAGES_COMMIT_SHA=auto

# Netlify (if using)
NETLIFY_BUILD_HOOK=your-build-hook-url

# ===========================================
# Feature Flags
# ===========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PWA=false

# ===========================================
# Performance & Caching
# ===========================================
NEXT_PUBLIC_REVALIDATE_TIME=86400
NEXT_PUBLIC_CACHE_MAX_AGE=31536000